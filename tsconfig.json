{
    "compilerOptions": {
        "target": "es2015",
        "module": "none",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true
    },
    "include": [
        "./index.ts",
        "./src",
        "./test",
        "node_modules/@types"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
